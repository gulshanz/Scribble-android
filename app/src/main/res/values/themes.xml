<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scribble" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightBlack</item>
        <item name="colorPrimaryVariant">@color/floralWhite</item>
        <item name="colorOnPrimary">@color/periwinkeCyrola</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/bananaMania</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Scribble.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Scribble.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



