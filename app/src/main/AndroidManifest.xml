<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itl.scribble">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Daily Diary"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scribble"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.ShowPostsAct"></activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeDrawer"
            android:label="@string/title_activity_home_drawer"
            android:theme="@style/Theme.Scribble.NoActionBar" />
        <activity android:name=".activities.Signup" />
        <activity android:name=".activities.Login"></activity>
    </application>

</manifest>